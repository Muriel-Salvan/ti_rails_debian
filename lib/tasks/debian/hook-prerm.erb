#!/bin/sh
case "$1" in
  removing)
    sv -w 20 force-stop <%= app_name %> || echo "Error while trying to stop the service"
  ;;

  upgrading)
    echo "Keep the service running for upgrade" >&2
  ;;

  *)
    echo "Warning: prerm part called with invalid argument" >&2
    sv -w 20 force-stop <%= app_name %> || echo "Error while trying to stop the service"
  ;;
esac

exit 0
